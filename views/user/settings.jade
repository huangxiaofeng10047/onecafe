extends ../layout
block link
	link(rel="stylesheet", href="/css/header.css")
	link(rel="stylesheet", href="/css/settings.css")
block content
	include ../includes/header.jade
	.container
		.row
			.col-xs-9
				.basic-info
					.panel.panel-default
						.panel-heading
							.panle-title 基本资料
						.panle-body
							.row 
								form.col-xs-10.col-xs-offset-1.form-horizontal(method="post")
									.form-group
										label.control-label.col-xs-3(for="username") 用户名
										.col-xs-8
											input.form-control#username(readonly="true")
									.form-group
										label.control-label.col-xs-3(for="email") 电子邮件
										.col-xs-8
											input.form-control#email
									.form-group
										label.control-label.col-xs-3(for="website") 个人网站
										.col-xs-8
											input.form-control#website
									.form-group
										label.control-label.col-xs-3(for="signature") 个性签名
										.col-xs-8
											input.form-control#signature
									.form-group
										p.submit
											button.btn.btn-primary(type="submit") 提交
			.col-xs-3
				img.avatar(src="", alt="")
				.changeAvatar
					input.hidden(type="file" id="avatarFile")
					button.btn.btn-default#changeAvatarBtn 修改头像
					p 从电脑中选择图片上传, 图像大小不要超过 2 MB，长宽不要超过 3000 px
					
block scripts  
	script(src="/js/settings.js")
